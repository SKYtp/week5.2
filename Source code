#include<stdio.h>
#include<string.h>
int main() {
	char word[100];
	int i, x, n, j;
	printf("Enter string : ");
	scanf("%s", word);
	printf("\n-------------------------------\n");
	printf("%s \n",word);
	n = strlen(word);
	i = n-1;
	//printf("%d",n);
	while (i >= 0) {
		printf("%c",word[i]);
		i--;
	}
	return 0;
}
